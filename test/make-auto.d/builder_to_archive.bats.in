source common.bash  # for ShellCheck; removed by clearly test

@test 'builder to archive %(tag)s' {
    scope %(scope)s
    case $CLEARLY_TEST_PACK_FMT in
        squash*)
            ext=sqfs
            ;;
        tar-unpack)
            ext=tar.gz
            ;;
        *)
            false  # unknown format
            ;;
    esac
    archive=${clearly_tardir}/%(tag)s.${ext}
    clearly convert -i "$CLEARLY_TEST_BUILDER" '%(tag)s' "$archive"
    archive_grep "$archive"
    archive_ok "$archive"
}
