#!/bin/bash
# test-scope: quick
# test-builder-include: docker
# test-need-sudo
#
# Pull a docker image directly from Dockerhub and pack it into an image tarball.

set -e

#srcdir=$1  # unused
tarball_gz=${2}.tar.gz
workdir=$3

tag=docker_pull
addr=alpine:3.17
img=$tag:latest

cd "$workdir"
sudo docker pull "$addr"
sudo docker tag "$addr" "$tag"

# FIXME: do we need a clearly_version_docker equivalent?
sudo docker tag "$tag" "$img"


hash_=$(sudo docker images -q "$img" | sort -u)
if [[ -z $hash_ ]]; then
    echo "no such image '$img'"
    exit 1
fi

clearly convert -i docker "$tag" "$tarball_gz"
